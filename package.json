{
  "$schema": "https://www.schemastore.org/package.json",
  "private": true,
  "version": "1.0.6",
  "type": "module",
  "scripts": {
    "build": "vite build",
    "dev": "vite",
    "check": "npm run lint && npm run typecheck && npm run test && npm run backend:lint && npm run backend:test",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc -p tsconfig.json --noEmit --pretty false",
    "test": "vitest run --reporter=dot",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui",
    "backend:lint": "php vendor/bin/pint --dirty",
    "backend:test": "php artisan test --compact",
    "generate-favicons": "tsx scripts/generate-favicons.ts",
    "build:vibe": "cd ../../vue/vibe && npm run build:lib",
    "release:vibe": "cd ../../vue/vibe && npm run release",
    "release": "npx @wyxos/zephyr@latest"
  },
  "devDependencies": {
    "@laravel/echo-vue": "^2.2.7",
    "@laravel/vite-plugin-wayfinder": "^0.1.7",
    "@playwright/test": "^1.56.1",
    "@tailwindcss/vite": "^4.0.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "@vitejs/plugin-vue": "^6.0.2",
    "@vitest/ui": "^4.0.13",
    "@vue/test-utils": "^2.4.6",
    "axios": "^1.11.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "concurrently": "^9.0.1",
    "eslint": "^9.39.1",
    "eslint-plugin-vue": "^10.6.0",
    "globals": "^16.5.0",
    "jsdom": "^27.2.0",
    "laravel-echo": "^2.2.7",
    "laravel-vite-plugin": "^2.0.0",
    "lucide": "^0.554.0",
    "lucide-vue-next": "^0.554.0",
    "playwright": "^1.56.1",
    "pusher-js": "^8.4.0",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.0.0",
    "tsx": "^4.20.6",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.47.0",
    "vite": "^7.0.7",
    "vitest": "^4.0.13",
    "vue-eslint-parser": "^10.2.0"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^7.1.0",
    "@fortawesome/free-solid-svg-icons": "^7.1.0",
    "@fortawesome/vue-fontawesome": "^3.1.2",
    "@internationalized/date": "^3.10.0",
    "@oruga-ui/oruga-next": "^0.12.2",
    "@oruga-ui/theme-oruga": "^0.8.0",
    "@sentry/browser": "^10.27.0",
    "@sentry/vue": "^10.27.0",
    "@unovis/ts": "^1.6.2",
    "@unovis/vue": "^1.6.2",
    "@vueuse/core": "^14.1.0",
    "@wyxos/listing": "^1.0.3",
    "@wyxos/vibe": "^2.1.18",
    "mysql2": "^3.16.1",
    "reka-ui": "^2.7.0",
    "vue": "^3.5.24",
    "vue-router": "^4.6.3",
    "vue-toastification": "^2.0.0-rc.5"
  }
}
